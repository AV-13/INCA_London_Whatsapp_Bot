{
  "version": "7.2",
  "data_api_version": "3.0",
  "routing_model": {},
  "screens": [
    {
      "id": "CALENDAR_SCREEN",
      "terminal": true,
      "title": "Select a Date",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "CalendarPicker",
            "name": "calendar",
            "label": "Select your reservation date",
            "helper-text": "Choose a date for your table",
            "required": true,
            "mode": "single",
            "min-date": "2025-01-01",
            "max-date": "2026-12-31",
            "unavailable-dates": [],
            "include-days": ["Wed", "Thu", "Fri", "Sat", "Sun"],
            "on-select-action": {
              "name": "data_exchange",
              "payload": {
                "calendar": "${form.calendar}"
              }
            }
          },
          {
            "type": "Footer",
            "label": "Continue",
            "on-click-action": {
              "name": "complete",
              "payload": {}
            }
          }
        ]
      }
    }
  ]
}
